<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        background-color: #e0f7fa;
        font-family: 'Arial', sans-serif;
    }

    .chat-container {
        max-width: 650px;
        margin: 50px auto;
        background-color: #fefefe;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        overflow: hidden;
    }

    .chat-box {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 0 0 10px 10px;
    }

    .card-header {
        background-color: #4db6ac;
        color: #ffffff;
        font-weight: bold;
        text-align: center;
        font-size: 1.5rem;
        padding: 15px;
        border-radius: 10px 10px 0 0;
        box-shadow: inset 0 -3px 5px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        border-radius: 25px;
        padding: 15px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #4db6ac;
        border: none;
        border-radius: 25px;
        font-weight: bold;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #00695c;
    }

    .user-msg, .bot-msg {
        padding: 12px;
        border-radius: 10px;
        margin-bottom: 10px;
        display: inline-block;
        max-width: 80%;
        font-size: 1rem;
        line-height: 1.4;
    }

    .user-msg {
        background-color: #4db6ac;
        color: white;
        align-self: flex-end;
        text-align: right;
        border-radius: 10px 0 10px 10px;
    }

    .bot-msg {
        background-color: #eeeeee;
        color: #333;
        border-radius: 0 10px 10px 10px;
    }

    .messages {
        display: flex;
        flex-direction: column;
        margin-top: 20px;
        min-height: 300px;
        padding: 20px;
        overflow-y: auto;
        background-color: #f0f4c3;
        border-radius: 10px;
        border: 1px solid #dcedc8;
    }

    .messages::-webkit-scrollbar {
        width: 8px;
    }

    .messages::-webkit-scrollbar-thumb {
        background-color: #4db6ac;
        border-radius: 5px;
    }
</style>

<div class="container chat-container">
    <!-- Chatbox card -->
    <div class="card">
        <div class="card-header">
            Your Health Companion
        </div>
        <div class="card-body chat-box">
            <form action="/chatbot" method="POST">
                <div class="form-group">
                    <label for="userInput">How can I help you stay healthy today?</label>
                    <input type="text" id="userInput" name="prompt" class="form-control" placeholder="Ask me anything about health..." required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Chat Now</button>
            </form>

            <!-- Chat messages -->
            <div class="messages mt-4">
                <% if (typeof response !== 'undefined') { %>
                    <div class="user-msg">
                        <strong>You:</strong> <%= response.prompt %>
                    </div>
                    <div class="bot-msg">
                        <strong>Bot:</strong> <%= response.reply %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
