
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    #loading {
      display: none;
      margin-top: 20px;
    }
    #resultCard {
      display: none;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2>Log Health Issue & Symptoms</h2>

    <!-- Form to log symptoms -->
    <form id="symptomForm" action="/symptom/analysis" method="POST">
      <div class="mb-3">
        <label for="healthIssue" class="form-label">Health Issue</label>
        <input type="text" id="healthIssue" name="healthIssue" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="symptoms" class="form-label">Symptoms</label>
        <textarea id="symptoms" name="symptoms" rows="3" class="form-control" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Log Issue</button>
    </form>

    <!-- Processing Animation -->
    <div id="loading">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
      <p>Processing your information...</p>
    </div>

    <!-- Result Card for possible causes -->
    <div id="resultCard" class="card">
      <div class="card-body">
        <h5 class="card-title">Possible Causes</h5>
        <p id="causeResult">Here will be the cause analysis result.</p>
        <button id="recommendYoga" class="btn btn-success">Recommend Yoga Practice</button>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('symptomForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Show loading animation
      document.getElementById('loading').style.display = 'block';
      document.getElementById('resultCard').style.display = 'none';

      const healthIssue = document.getElementById('healthIssue').value;
      const symptoms = document.getElementById('symptoms').value;

      try {
        // Simulate API call (replace with actual API call to backend)
        const response = await fetch('/api/analyze-symptoms', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ healthIssue, symptoms })
        });
        const data = await response.json();

        // Hide loading and show result
        document.getElementById('loading').style.display = 'none';
        document.getElementById('resultCard').style.display = 'block';

        // Display the cause result
        document.getElementById('causeResult').innerText = data.cause || "No specific cause found.";
      } catch (error) {
        console.error("Error fetching analysis:", error);
        document.getElementById('loading').style.display = 'none';
        alert("An error occurred while processing your symptoms. Please try again.");
      }
    });

    // Event for the Yoga Recommendation button
    document.getElementById('recommendYoga').addEventListener('click', () => {
      alert("Yoga recommendations will be displayed here.");  // Replace with actual function or API call.
    });
  </script>
