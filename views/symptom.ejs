<style>
  /* General Styling */
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f8f9fa;
    color: #495057;
  }

  .container {
    max-width: 800px;
    margin-top: 50px;
  }

  h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 20px;
    color: #007bff;
  }

  /* Form Styling */
  .form-control {
    border-radius: 10px;
    border: 1px solid #ced4da;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    font-size: 1rem;
  }

  .form-label {
    font-weight: bold;
    color: #343a40;
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    border-radius: 5px;
    padding: 12px 30px;
    font-size: 1rem;
    text-transform: uppercase;
  }

  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #004085;
  }

  /* Loading Spinner */
  #loading {
    display: none;
    margin-top: 20px;
    text-align: center;
  }

  /* Result Card Styling */
  .card {
    border-radius: 15px;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    background-color: #ffffff;
    margin-top: 30px;
  }

  .card-body {
    padding: 30px;
  }

  .card-title {
    font-size: 1.5rem;
    color: #007bff;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .card p {
    font-size: 1.1rem;
    color: #6c757d;
  }

  .bot-msg {
    background-color: #e9ecef;
    border-radius: 5px;
    padding: 10px;
    margin-top: 20px;
    border-left: 5px solid #007bff;
  }

  /* Media Queries for Responsiveness */
  @media (max-width: 768px) {
    .container {
      padding: 15px;
    }

    h2 {
      font-size: 1.5rem;
    }

    .card-body {
      padding: 20px;
    }

    .form-control {
      font-size: 0.9rem;
    }
  }
</style>

<div class="container">
  <h2>Log Health Issue & Symptoms</h2>

  <!-- Form to log symptoms -->
  <form id="symptomForm" action="/symptom" method="POST">
    <div class="mb-3">
      <label for="healthIssue" class="form-label">Health Issue</label>
      <input type="text" id="healthIssue" name="healthIssue" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="symptoms" class="form-label">Symptoms</label>
      <textarea id="symptoms" name="symptoms" rows="3" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Log Issue</button>
  </form>

  <!-- Processing Animation -->
  <div id="loading">
    <div class="spinner-border text-primary" role="status">
      <span class="visually-hidden">Loading...</span>
    </div>
    <p>Processing your information...</p>
  </div>

  <!-- Result Card for possible causes -->
  <div id="resultCard" class="card">
    <div class="card-body">
      <h5 class="card-title">Possible Causes</h5>
      <p id="causeResult">Here will be the cause analysis result.</p>

      <% if (typeof botReply !== 'undefined' && botReply) { %>
        <div class="mt-4">
          <div class="bot-msg">
            <strong>Bot:</strong> <%= botReply %>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>
